{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "supabase/**/*",
    "node_modules/**/*",
    "dist/**/*",
    "**/deno.json",
    "**/deno.lock"
  ]
}
