{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // Removed due to TS5096
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Removed as per TS6310, and composite:true requires emit
    "composite": true, // Added as per TS6306
    "declaration": true, // Recommended with composite:true

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
