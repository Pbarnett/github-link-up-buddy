{
  "dashboard": {
    "id": null,
    "title": "Parker Flight - Business Rules & Forms Health",
    "tags": ["parker-flight", "business-rules", "monitoring"],
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "sharedCrosshair": false,
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Duration",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(http_request_duration_seconds_sum{app=\"parker-flight-api\"})",
            "legendFormat": "Avg Duration (s)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 2 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Feature Flag Hits",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (flag) (rate(feature_flag_hits_total{app=\"parker-flight-api\"}[5m]))",
            "legendFormat": "{{flag}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        }
      },
      {
        "id": 3,
        "title": "Business Rules Config Requests",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (business_rules_config_requests_total{app=\"parker-flight-api\"})",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
        "options": {
          "pieType": "pie",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      {
        "id": 4,
        "title": "AWS Operations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(aws_operations_total{app=\"parker-flight-api\"}[5m]))",
            "legendFormat": "Operations/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0,
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "id": 5,
        "title": "Feature Flag Rollout Status",
        "type": "table",
        "targets": [
          {
            "expr": "feature_flag_rollout_percentage{app=\"parker-flight-api\"}",
            "legendFormat": "{{flag}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "options": {
          "showHeader": true
        }
      },
      {
        "id": 6,
        "title": "Config Requests by Environment",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (environment) (business_rules_config_requests_total{app=\"parker-flight-api\"})",
            "legendFormat": "{{environment}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "options": {
          "orientation": "horizontal",
          "showUnfilled": true
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "refresh": "30s",
    "version": 1
  }
}
