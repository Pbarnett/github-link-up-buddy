{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Production Optimizations */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    /* Emit Configuration */
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "importHelpers": true,
    
    /* Performance */
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    
    /* Strict Production Rules */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    
    /* Tree Shaking Support */
    "verbatimModuleSyntax": false,
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx",
    "tests/**/*",
    "**/*.config.ts",
    "scripts/**/*"
  ]
}
